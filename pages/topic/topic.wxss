.page{
    width: 750rpx;
    height: 108rpx;
    background: #fff;
    margin-bottom: 20rpx;
}

.page view{
    height: 108rpx;
    width: 50%;
    float: left;
    font-size: 29rpx;
    color: #333;
    text-align: center;
    line-height: 108rpx;
}

.page .prev{
    border-right: 1px solid #D9D9D9;
}

.page .disabled{
    color: #ccc;
}
.banner{
    margin-bottom: 30rpx;
    position: relative;
}
.banner swiper {
   height: 800rpx;
    
}

.banner swiper image {
    width: 100%;
    height: 800rpx;
}
.banner navigator{
    position: absolute;
    right: 30rpx;
    top: 30rpx;
    width: 40rpx;
}
.banner navigator.shopping-cart{
    left: 30rpx;
}
.banner navigator image{
    width: 50rpx;
    height: 50rpx;
}