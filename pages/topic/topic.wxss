    background: #fff;
    
    position: relative;
}
.topic-list .item .btn{
    color: black;
    letter-spacing: 4rpx;
    padding: 18rpx 28rpx;
    text-align: center;
    border-radius: 30rpx;
    font-size: 24rpx;
    position: absolute;
    background-color: #fff;
    bottom: 30rpx;
    left: 30rpx;
    font-weight: bold;
    line-height: 30rpx;
}
.topic-list .img{
    width: 100%;
    height: 100%;
}

